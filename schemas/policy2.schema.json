{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Policy",
  "type": "object",
  "required": ["id", "name", "scope", "matchers", "action", "severity", "explain"],
  "properties": {
    "id": {
      "oneOf": [
        {"type": "string"},
        {"type": "integer"}
      ]
    },
    "name": {"type": "string"},
    "scope": {"type": "object"},
    "matchers": {
      "type": "array",
      "items": {"type": "object"}
    },
    "action": {"type": "string"},
    "severity": {"type": "string"},
    "explain": {"type": "string"}
  },
  "additionalProperties": false
}
